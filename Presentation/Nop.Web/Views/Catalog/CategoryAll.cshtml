@model IList<CategoryModel>

@using Nop.Core.Domain.Catalog
<link href="~/css/global.css" rel="stylesheet" />
<link href="~/css/index.css" rel="stylesheet" />
<link rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Work Sans:ital,wght@0,400;0,600;1,400&display=swap" />
<link rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Playfair Display:wght@600;700&display=swap" />
<style>
    .pcimage {
        width: 585px;
        height: 355px;
        left: 120px;
        top: 369px;
        position: absolute;
    }

    .pcText {
        left: 229px;
        top: 155px;
        position: absolute;
        text-align: center;
        color: whites;
        font-size: 32px;
        font-family: Playfair Display;
        font-weight: 600;
        line-height: 44.80px;
        word-wrap: break-word
    }
    .card-block {
    padding: 16px;
}

    .item-box .picture {
        z-index: 1;
        background-color: #fff;
        margin: 0 -16px 64px;
    }
</style>
@if (Model.Count > 0)
{
    <div class="category-grid home-page-category-grid">
        <div class="title">
            @*<strong>Category</strong>*@
        </div>
        <div class="category-grid" style="
    margin: 18px 0 20px;
">
            <div class="row">

                @foreach (var item in Model)
                {
                    <div class="item-box card col-12 col-sm-6 col-md-4 col-lg-4 col-xl-4">
                        <div class="category-item card-block">


                            <h2 class="title">
                                <a href="@(Url.RouteUrl<Category>(new { SeName = item.SeName }))" class="card-title" title="@item.PictureModel.Title">
                                    @item.Name
                                </a>

                            </h2>
                            <div class="picture">
                                <a href="@(Url.RouteUrl<Category>(new { SeName = item.SeName }))" title="@item.PictureModel.Title">
                                    <img alt="@item.PictureModel.AlternateText" class="card-img-top" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}